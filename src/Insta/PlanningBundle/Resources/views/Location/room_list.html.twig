{% extends "PlanningBundle:Location:_layout_location.html.twig" %}

{% block title %}PlanningBundle:Location:roomList{% endblock %}

{% block main %}
    <h1>Liste des salles <small class="pull-right"> <a class="btn btn-primary btn-xs" href="{{ path("add_room")  }}">Ajouter une salle</a></small></h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Site</th>
        <th>Adresse</th>
        <th>Actions</th>
    </tr>
    </thead>
{% for room in rooms %}
<tr>
    <td>{{ room.id }}</td>
    <td>{{ room.name }}</td>
    <td>{{ room.site.name }}</td>
    <td>{{ room.site.street~" "~room.site.zipcode~" "~room.site.city }}</td>
    <td>
        <div class="btn-group" role="group" aria-label="...">
            <a class="btn btn-primary btn-xs" href="{{ path("room",{id:room.id})  }}">Afficher</a>
            <a class="btn btn-info btn-xs" href="{{ path('edit_room', {id : room.id})  }}">Editer</a>
        </div>
    </td>
</tr>
{% endfor %}
</table>

{% endblock %}
