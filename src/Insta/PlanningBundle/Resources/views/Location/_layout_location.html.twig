{% extends 'PlanningBundle::layout.html.twig' %}

{% set route = app.request.attributes.get('_route') %}

{% block content %}

    <div class="col-sm-9">
        {% block main %}{% endblock %}
    </div>

    <div class="col-sm-3">

        <ul class="nav nav-pills nav-stacked">
            <li {% if 'site' in route %}class="active"{% endif %}
                    ><a href="{{ path('site_list') }}">Gestion des sites</a></li>
            <li {% if 'room' in route %}class="active"{% endif %}
                    ><a href="{{ path('room_list') }}">Gestion des salles</a></li>
        </ul>

    </div>



{% endblock %}