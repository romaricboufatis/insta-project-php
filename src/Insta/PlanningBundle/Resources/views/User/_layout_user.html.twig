{% extends 'PlanningBundle::layout.html.twig' %}

{% set route = app.request.attributes.get('_route') %}

{% block content %}

    <div class="col-sm-9">
        {% block main %}{% endblock %}
    </div>

    <div class="col-sm-3">

        <ul class="nav nav-pills nav-stacked">
            <li {% if 'user' in route  and 'switch_user_type' != route  %}class="active"{% endif %}
                    ><a href="{{ path('user_list') }}">Gestion des utilisateurs</a></li>
            <li {% if 'group' in route %}class="active"{% endif %}
                    ><a href="{{ path('group_list') }}">Gestion des groupes</a></li>
            <li {% if 'switch_user_type' in route %}class="active"{% endif %}
                    ><a href="{{ path('switch_user_type') }}">Changer le type d'un utilisateur</a></li>
        </ul>

    </div>



{% endblock %}