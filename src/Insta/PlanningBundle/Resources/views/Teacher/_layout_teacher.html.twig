{% extends 'PlanningBundle::layout.html.twig' %}

{% set route = app.request.attributes.get('_route') %}

{% block content %}

    <div class="col-sm-9">
        {% block main %}{% endblock %}
    </div>

    <div class="col-sm-3">

        <ul class="nav nav-pills nav-stacked">
            <li {% if 'teacher' in route %}class="active"{% endif %}
                    ><a href="{{ path('teacher_list') }}">Gestion des professeurs</a></li>
            <li {% if 'course' in route %}class="active"{% endif %}
                    ><a href="{{ path('course_list') }}">Gestion des cours</a></li>
        </ul>

    </div>



{% endblock %}